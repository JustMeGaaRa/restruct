{
    "name": "vscode-extension",
    "displayName": "Restruct",
    "description": "An extension for develpers to write and preview the architecture models and diagrams using structurizr workspace structure.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.94.0"
    },
    "categories": [
        "Programming Languages",
        "Visualization"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/JustMeGaaRa/restruct"
    },
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "restruct.preview",
                "title": "Restruct: Preview Workspace",
                "icon": "$(preview)"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "restruct.preview",
                    "group": "navigation",
                    "when": "resourceLangId == typescript"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.8",
        "@types/node": "20.x",
        "@types/vscode": "^1.94.0",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.24.0",
        "eslint": "^9.11.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "ws": "^8.16.0"
    }
}
